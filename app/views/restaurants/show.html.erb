<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<%# <p><%= @reviews.restaurant %></p> %>

<%= link_to "Back to overview", restaurants_path, class: "btn btn-primary"%>
<%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

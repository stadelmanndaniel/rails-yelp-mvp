<h1>Restaurants#new</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: 'The restaurant name please', error: 'Name is mandatory, please specify one' %>
  <%= f.input :address, hint: 'No special characters.' %>
  <%= f.input :phone_number, placeholder: '123456' %>
  <%= f.input :category, :collection => %w[chinese italian japanese french belgian] %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Go back", restaurants_path, class: "btn btn-primary" %>
